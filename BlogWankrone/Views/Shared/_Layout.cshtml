<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Wankrone Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container-fluid">
            @Html.ActionLink("W Blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Gezintiyi aç/kapat" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <il class=" navbar-nav flex-grow-1">
                    @Html.ActionLink("Blog Listesi", "Index", "Blog", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("Kategori Listesi", "Index", "Category", new { area = "" }, new { @class = "nav-link" })
                </il>
            </div>
            <div class="navbar navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/Blog/List">Bloglar</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>



    <div class="container body-content">
        <div class="row">

            @if (IsSectionDefined("SagKolon"))
            {
                <div class="col-md-8">
                    @RenderBody()
                </div>
                <div class="col-md-4">
                    @RenderSection("SagKolon")
                </div>
            }
            else
            {
                <div class="col-md-12">
                    @RenderBody()
                </div>
            }

        </div>

        <hr />

        <footer>

            <p>&copy; Copyright @DateTime.Now.Year Tüm Hakları Saklıdır. <a href="mail:hege@example.com">omerfaruksaglam742@gmail.com</a></p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
