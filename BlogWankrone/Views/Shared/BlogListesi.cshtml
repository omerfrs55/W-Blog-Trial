@model IEnumerable<BlogWankrone.Models.BlogModel>


@if (Model.Count() == 0)
{
    <div class="alert alert-danger">
        <h3>Kayıt Bulunamadı</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">
            <h3 class="page-header">
                @blog.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="https://picsum.photos/700/300?random=1" alt="" />
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha fazla...", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })
        </div>
        <hr />
    }

}



