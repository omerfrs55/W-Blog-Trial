@model IEnumerable<BlogWankrone.Models.Category>

<style>
    a:hover {
        color: purple !important;
        transition: color 0.4s ease;
    }
</style>

<div class="p-3 mb-3 bg-light border rounded bg text-bg-light mt-3">
    <h4 class="text-center pb-2 pt-2">Blog Kategorileri</h4>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <ul class="list-unstyled text-center">
                    <li>
                        <a href="/Blog/List/@item.Id">@item.KategoriAdi</a>
                    </li>
                </ul>
            </div>
        }
    </div>

</div>
