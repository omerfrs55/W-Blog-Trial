@model BlogWankrone.Models.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Kategori Güncelle</h2>


@if (TempData["Kategori"] != null)
{
    var kategori = (BlogWankrone.Models.Category)TempData["Kategori"];

    <div class="alert alert-danger">
        <span class="glyphicon glyphicon-ok"></span>
        <b>@kategori.KategoriAdi</b>Kayıt Edildi.
    </div>

}





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.KategoriAdi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.KategoriAdi, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="btn btn-primary text-bg-light">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
